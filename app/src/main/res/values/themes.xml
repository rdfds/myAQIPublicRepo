<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAQI4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyAQI4.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonTabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">7.25sp</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/average_sans</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/average_sans</item>
    </style>

    <style name="BodyTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/average_sans</item>
    </style>

    <style name="CustomHeadline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/text_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CustomBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonDefaultStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.MyAQI4.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyAQI4.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>